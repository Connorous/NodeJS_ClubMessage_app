extends layout

block content
  h1= title




  form(method='POST' multipart="urlencoded")
    div.form-group
      label(for='message') Message:
      input#message.form-control(type='text', placeholder='I had a good day today!' name='message' required )


    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg